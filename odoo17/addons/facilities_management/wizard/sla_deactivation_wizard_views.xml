<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SLA Deactivation Wizard Form View -->
        <record id="view_sla_deactivation_wizard_form" model="ir.ui.view">
            <field name="name">facilities.sla.deactivation.wizard.form</field>
            <field name="model">facilities.sla.deactivation.wizard</field>
            <field name="arch" type="xml">
                <form string="Deactivate SLA">
                    <sheet>
                        <group>
                            <group string="SLA Information">
                                <field name="sla_id"/>
                            </group>
                        </group>
                        <group string="Deactivation Details">
                            <field name="deactivation_reason" placeholder="Please provide a reason for deactivating this SLA..."/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm_deactivation" type="object" string="Confirm Deactivation" 
                                class="btn-danger" confirm="Are you sure you want to deactivate this SLA?"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- SLA Deactivation Wizard Action -->
        <record id="action_sla_deactivation_wizard" model="ir.actions.act_window">
            <field name="name">Deactivate SLA</field>
            <field name="res_model">facilities.sla.deactivation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>