            </div>
        </template>

        <!-- ESG Pay Gap Report Template -->
        <template id="report_esg_pay_gap">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="esg_reporting.report_esg_pay_gap_document"/>
