<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- ESG Emissions List View -->
        <record id="view_esg_emission_list" model="ir.ui.view">
            <field name="name">esg.emission.list</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <tree string="ESG Emissions">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="emission_factor_id"/>
                    <field name="quantity"/>
                    <field name="unit"/>
                    <field name="emission_amount"/>
                    <field name="amount"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'confirmed'" decoration-success="state == 'validated'" decoration-danger="state == 'cancelled'"/>
                </tree>
            </field>
        </record>

        <!-- ESG Emissions Form View -->
        <record id="view_esg_emission_form" model="ir.ui.view">
            <field name="name">esg.emission.form</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <form string="ESG Emission">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
                        <button name="action_validate" string="Validate" type="object" class="oe_highlight" states="confirmed"/>
                        <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed"/>
                        <button name="action_draft" string="Reset to Draft" type="object" states="cancelled"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,validated"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Emission Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="partner_id"/>
                                <field name="emission_factor_id"/>
                                <field name="quantity"/>
                                <field name="unit"/>
                            </group>
                            <group>
                                <field name="emission_amount"/>
                                <field name="amount"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="journal_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ESG Emissions Kanban View -->
        <record id="view_esg_emission_kanban" model="ir.ui.view">
            <field name="name">esg.emission.kanban</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <kanban string="ESG Emissions" class="o_kanban_dashboard">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="emission_factor_id"/>
                    <field name="emission_amount"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <strong>Date:</strong> <field name="date"/>
                                            </div>
                                            <div class="col-6">
                                                <strong>Factor:</strong> <field name="emission_factor_id"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <strong>Amount:</strong> <field name="emission_amount"/> t CO2
                                            </div>
                                            <div class="col-6">
                                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'confirmed': 'info', 'validated': 'success', 'cancelled': 'danger'}}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ESG Emissions Graph View -->
        <record id="view_esg_emission_graph" model="ir.ui.view">
            <field name="name">esg.emission.graph</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <graph string="ESG Emissions" type="bar">
                    <field name="emission_factor_id"/>
                    <field name="emission_amount" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- ESG Emissions Pivot View -->
        <record id="view_esg_emission_pivot" model="ir.ui.view">
            <field name="name">esg.emission.pivot</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <pivot string="ESG Emissions">
                    <field name="emission_factor_id" type="row"/>
                    <field name="date" type="col" interval="month"/>
                    <field name="emission_amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- ESG Emissions Search View -->
        <record id="view_esg_emission_search" model="ir.ui.view">
            <field name="name">esg.emission.search</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <search string="ESG Emissions">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="emission_factor_id"/>
                    <field name="date"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Validated" name="validated" domain="[('state', '=', 'validated')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Emission Factor" name="emission_factor" context="{'group_by': 'emission_factor_id'}"/>
                        <filter string="Partner" name="partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Month" name="month" context="{'group_by': 'month'}"/>
                        <filter string="Year" name="year" context="{'group_by': 'year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ESG Emissions Action -->
        <record id="action_esg_emission" model="ir.actions.act_window">
            <field name="name">ESG Emissions</field>
            <field name="res_model">esg.emission</field>
            <field name="view_mode">list,form,kanban,graph,pivot</field>
            <field name="context">{'search_default_validated': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first ESG emission record!
                </p>
                <p>
                    Track carbon emissions from various sources like electricity, transportation, and heating.
                </p>
            </field>
        </record>

        <!-- ESG Emission Factors List View -->
        <record id="view_esg_emission_factor_list" model="ir.ui.view">
            <field name="name">esg.emission.factor.list</field>
            <field name="model">esg.emission.factor</field>
            <field name="arch" type="xml">
                <tree string="ESG Emission Factors">
                    <field name="name"/>
                    <field name="factor"/>
                    <field name="unit"/>
                    <field name="category"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- ESG Emission Factors Form View -->
        <record id="view_esg_emission_factor_form" model="ir.ui.view">
            <field name="name">esg.emission.factor.form</field>
            <field name="model">esg.emission.factor</field>
            <field name="arch" type="xml">
                <form string="ESG Emission Factor">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="factor"/>
                                <field name="unit"/>
                            </group>
                            <group>
                                <field name="category"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ESG Emission Factors Action -->
        <record id="action_esg_emission_factor" model="ir.actions.act_window">
            <field name="name">ESG Emission Factors</field>
            <field name="res_model">esg.emission.factor</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first emission factor!
                </p>
                <p>
                    Define emission factors for different types of activities and energy sources.
                </p>
            </field>
        </record>

    </data>
</odoo>