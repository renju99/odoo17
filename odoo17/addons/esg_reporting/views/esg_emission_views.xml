<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ESG Emission Form View -->
        <record id="esg_emission_form" model="ir.ui.view">
            <field name="name">esg.emission.form</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <form string="ESG Emission">
                    <sheet>
                        <group>
                            <group string="Basic Information">
                                <field name="name"/>
                                <field name="emission_type"/>
                                <field name="emission_source"/>
                                <field name="measurement_unit"/>
                                <field name="emission_value"/>
                                <field name="reporting_period"/>
                            </group>
                            <group string="Additional Details">
                                <field name="location"/>
                                <field name="facility"/>
                                <field name="responsible_person"/>
                                <field name="verification_status"/>
                                <field name="notes"/>
                            </group>
                        </group>
                        <group string="Calculations">
                            <field name="co2_equivalent"/>
                            <field name="conversion_factor"/>
                            <field name="uncertainty_level"/>
                        </group>
                        <group string="Documentation">
                            <field name="supporting_documents"/>
                            <field name="verification_date"/>
                            <field name="next_review_date"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ESG Emission Tree View -->
        <record id="esg_emission_tree" model="ir.ui.view">
            <field name="name">esg.emission.tree</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <tree string="ESG Emissions">
                    <field name="name"/>
                    <field name="emission_type"/>
                    <field name="emission_source"/>
                    <field name="emission_value"/>
                    <field name="measurement_unit"/>
                    <field name="reporting_period"/>
                    <field name="location"/>
                    <field name="verification_status"/>
                </tree>
            </field>
        </record>

        <!-- ESG Emission Search View -->
        <record id="esg_emission_search" model="ir.ui.view">
            <field name="name">esg.emission.search</field>
            <field name="model">esg.emission</field>
            <field name="arch" type="xml">
                <search string="Search ESG Emissions">
                    <field name="name"/>
                    <field name="emission_type"/>
                    <field name="emission_source"/>
                    <field name="location"/>
                    <field name="responsible_person"/>
                    <filter string="Verified" name="verified" domain="[('verification_status', '=', 'verified')]"/>
                    <filter string="Pending Verification" name="pending" domain="[('verification_status', '=', 'pending')]"/>
                    <filter string="High Emissions" name="high_emissions" domain="[('emission_value', '>', 1000)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Emission Type" name="group_emission_type" context="{'group_by': 'emission_type'}"/>
                        <filter string="Location" name="group_location" context="{'group_by': 'location'}"/>
                        <filter string="Reporting Period" name="group_period" context="{'group_by': 'reporting_period'}"/>
                        <filter string="Verification Status" name="group_verification" context="{'group_by': 'verification_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ESG Emission Action -->
        <record id="action_esg_emission" model="ir.actions.act_window">
            <field name="name">ESG Emissions</field>
            <field name="res_model">esg.emission</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="esg_emission_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first ESG emission record!
                </p>
                <p>
                    Track and manage your environmental emissions data for ESG reporting.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_esg_emission"
                  name="Emissions"
                  parent="menu_esg_reporting"
                  action="action_esg_emission"
                  sequence="10"/>
    </data>
</odoo>